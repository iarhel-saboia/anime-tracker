<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Release Date</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @animes.each do |anime| %>
      <tr>
        <td><%= anime.title %></td>
        <td><%= anime.release %></td>
        <td><%= link_to 'Show', anime %></td>         
          <%= render 'form_help_follow', anime: anime %>
          <%= render 'form_help_favorite', anime: anime %>
        <% if user_signed_in? %>
          <% if policy(@animes).admin?%>
            <td><%= link_to 'Edit', edit_anime_path(anime) %></td>
            <td><%= link_to 'Destroy', anime, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>    
    <% end %>
  </tbody>
</table>
<br>