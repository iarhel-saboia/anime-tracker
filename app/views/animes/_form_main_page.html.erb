<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Release Date</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @animes.each do |anime| %>
      <tr>
        <td><%= anime.title %></td>
        <td><%= anime.release %></td>
        <td><%= link_to 'Show', anime %></td>
        <td><%= link_to 'Follow', anime %></td>
        <td><%= link_to 'Favorite', anime_favorites_path(anime), method: :post %></td>
        <% if user_signed_in? %>
          <% if policy(@animes).admin?%>
            <td><%= link_to 'Edit', edit_anime_path(anime) %></td>
            <td><%= link_to 'Destroy', anime, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% else %>
            <td><%= link_to 'Edit', edit_anime_path(anime) %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>