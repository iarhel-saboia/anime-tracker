<p id="notice"><%= notice %></p>


<% if user_signed_in? %>
    <h1> Hi, <%= current_user.email %> </h1>
<% end %>

<ul>
  <li><%= link_to "Sign up", new_user_registration_path %></li>
  <li><%= link_to "Log in", new_user_registration_path %></li>
  <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
</ul>

<h1>Animes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Favorite</th>
      <th>Release Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animes.each do |anime| %>
      <tr>
        <td><%= anime.title %></td>
        <td><%= anime.favorite %></td>
        <td><%= anime.release %></td>
        <td><%= link_to 'Show', anime %></td>
        <td><%= link_to 'Edit', edit_anime_path(anime) %></td>
        <td><%= link_to 'Destroy', anime, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

